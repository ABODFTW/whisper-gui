{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for Whisper GUI",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-spawn",
    "shell:allow-stdin-write",
    "shell:allow-kill",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/whisper-cli",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    "fs:allow-create",
    "fs:allow-remove",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA/**",
        "$HOME/**"
      ]
    }
  ]
}
